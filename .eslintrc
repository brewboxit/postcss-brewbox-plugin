{
  "extends": "airbnb-base",
  "rules": {
    "semi": 0,
    "spaced-comment": 0,
    "no-param-reassign": [2, {
      "props": false
    }],
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true,
      "optionalDependencies": true,
      "peerDependencies": true
    }]
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
}
